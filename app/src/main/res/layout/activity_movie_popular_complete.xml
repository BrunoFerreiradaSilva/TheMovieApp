<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_movie_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context="com.example.movieappferreira.ui.moviecomplete.MoviePopularCompleteActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_popular_complete_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/recycler_item_movie_popular_complete" />

    <include
        android:id="@+id/connection_off"
        layout="@layout/activity_wifi_off"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>