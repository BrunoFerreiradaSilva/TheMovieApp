<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/gray_dark"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_header_recycler_similar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/image_header_similar_movie"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_movie_header_recycler"
        android:layout_width="411dp"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_header_recycler_similar" />

</androidx.constraintlayout.widget.ConstraintLayout>