<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_header_recycler_similar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/image_header_similar_movie"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/title_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="@+id/image_header_recycler_similar"
        app:layout_constraintEnd_toEndOf="@+id/image_header_recycler_similar"
        app:tint="@color/red_violet" />

    <ImageView
        android:id="@+id/favorite_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="4dp"
        app:tint="@color/red_violet"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="@+id/image_header_recycler_similar"
        app:layout_constraintEnd_toEndOf="@+id/image_header_recycler_similar" />

    <TextView
        android:id="@+id/title_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/overpass_regular"
        android:text="Overview"
        android:textColor="@color/red_violet"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@id/name_movie_header_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_header_recycler_similar" />

    <TextView
        android:id="@+id/name_movie_header_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/black3"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_overview" />



</androidx.constraintlayout.widget.ConstraintLayout>